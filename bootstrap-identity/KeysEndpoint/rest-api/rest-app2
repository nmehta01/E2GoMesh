apiVersion: v1
kind: Pod
metadata:
  name: pubkeys
spec:
  containers:
  - name: rest-app 
    image: gcr.io/e2-chase/rest-app:v4
    env:
    - name: PUBLIC_KEY
      value: "/etc/config/service.pub" 
    volumeMounts:
    - name: config-volume
      mountPath: /etc/config
  volumes:
    - name: config-volume
      configMap:
        # Provide the name of the ConfigMap containing the files you want
        # to add to the container
        name: service-account.pub 

